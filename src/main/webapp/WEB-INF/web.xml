<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>web-servlet</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>kz.zhelezyaka.servlets.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>petServlet</servlet-name>
        <servlet-class>kz.zhelezyaka.servlets.PetServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>purchaseServlet</servlet-name>
        <servlet-class>kz.zhelezyaka.servlets.PurchaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>petServlet</servlet-name>
        <url-pattern>/pets</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>purchaseServlet</servlet-name>
        <url-pattern>/purchase</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/web-servlet</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
